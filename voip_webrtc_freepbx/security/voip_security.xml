<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- VoIP Categories -->
        <record id="module_category_voip" model="ir.module.category">
            <field name="name">VoIP</field>
            <field name="description">VoIP and WebRTC Management</field>
            <field name="sequence">15</field>
        </record>

        <!-- VoIP User Group -->
        <record id="group_voip_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_voip"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- VoIP Manager Group -->
        <record id="group_voip_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_voip"/>
            <field name="implied_ids" eval="[(4, ref('group_voip_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules for VoIP Server -->
        <record id="voip_server_user_rule" model="ir.rule">
            <field name="name">VoIP Server: User Access</field>
            <field name="model_id" ref="model_voip_server"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_voip_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="voip_server_manager_rule" model="ir.rule">
            <field name="name">VoIP Server: Manager Full Access</field>
            <field name="model_id" ref="model_voip_server"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_voip_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for VoIP User -->
        <record id="voip_user_own_rule" model="ir.rule">
            <field name="name">VoIP User: Own Records</field>
            <field name="model_id" ref="model_voip_user"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_voip_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="voip_user_manager_rule" model="ir.rule">
            <field name="name">VoIP User: Manager Full Access</field>
            <field name="model_id" ref="model_voip_user"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_voip_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for VoIP Call -->
        <record id="voip_call_own_rule" model="ir.rule">
            <field name="name">VoIP Call: Own Records</field>
            <field name="model_id" ref="model_voip_call"/>
            <field name="domain_force">[('odoo_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_voip_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="voip_call_manager_rule" model="ir.rule">
            <field name="name">VoIP Call: Manager Full Access</field>
            <field name="model_id" ref="model_voip_call"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_voip_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for VoIP Recording -->
        <record id="voip_recording_own_rule" model="ir.rule">
            <field name="name">VoIP Recording: Own Records</field>
            <field name="model_id" ref="model_voip_recording"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('shared_with_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_voip_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="voip_recording_manager_rule" model="ir.rule">
            <field name="name">VoIP Recording: Manager Full Access</field>
            <field name="model_id" ref="model_voip_recording"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_voip_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
